<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_banner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f000000">

    <ProgressBar
        android:id="@+id/pb_load_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_intl_banner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/intl_40dp" />

    <LinearLayout
        android:id="@+id/ll_intl_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_popup_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white" />

        <LinearLayout
            android:id="@+id/ll_title_bar_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/intl_green"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/intl_5dp">

            <ImageView
                android:id="@+id/iv_check_show_banner"
                android:layout_width="@dimen/intl_check_show_banner"
                android:layout_height="@dimen/intl_check_show_banner"
                android:layout_marginStart="@dimen/intl_10dp"
                android:layout_marginLeft="@dimen/intl_10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_check_out" />

            <TextView
                android:id="@+id/tv_content_banner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/intl_5dp"
                android:text="@string/intl_banner_show"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_close_banner"
                android:layout_width="@dimen/intl_close_banner"
                android:layout_height="@dimen/intl_close_banner"
                android:layout_marginEnd="@dimen/intl_10dp"
                android:layout_marginRight="@dimen/intl_10dp"
                android:background="@android:color/transparent"
                android:padding="@dimen/intl_5dp"
                android:scaleType="centerInside"
                android:src="@drawable/intl_icon_close_banner" />

        </LinearLayout>

    </LinearLayout>

